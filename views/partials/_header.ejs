<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    <% if (user) { %> 
      <span style="margin-left: 16em;">Logged in as: <%= user.email %></span>
      <form action="/logout" method="POST">
         <button class="btn btn-outline-dark" style="margin-left: 1em;">Logout</button> 
       </form>
      <% } else { %> 
        
        <form action="/login" method="POST"> 
      
          <span style="margin-left: 14em;">
            <input type="text" name="username" style="border: 1px solid #ccc; border-radius: 5px; padding-right: 0.5em;">



            <button class="btn btn-dark" style="background-color: black; padding-left: 1em;">Login</button>

          </span>
      
    </form>
      <%}%>
    </div>
  </nav>
</header>